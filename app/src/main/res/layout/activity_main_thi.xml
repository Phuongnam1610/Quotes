<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainThi">

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm mới" />

    <ImageView
        android:id="@+id/imgminhhoa"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <EditText
        android:id="@+id/mahang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã hàng" />

    <EditText
        android:id="@+id/tenhang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên hàng" />

    <EditText
        android:id="@+id/mota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mô tả" />

    <EditText
        android:id="@+id/soluong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số lượng" />

    <EditText
        android:id="@+id/giahang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập giá hàng" />

    <EditText
        android:id="@+id/ghichu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập ghi chú" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvSP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red" />
</LinearLayout>